        <servlet-class>phuclh.controllers.SearchCakeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadServlet</servlet-name>
        <servlet-class>phuclh.controllers.LoadServlet</servlet-class>
    </servlet>
    <servlet>
